{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Marketplace Template Metadata",
    "description": "Schema for template marketplace metadata stored in each template's marketplace.json file",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "description": "Display title for the template in marketplace"
        },
        "category": {
            "type": "string",
            "enum": [
                "dashboard",
                "landing",
                "ecommerce",
                "blog",
                "portfolio",
                "admin",
                "marketing",
                "saas",
                "forms",
                "tables",
                "navigation",
                "cards",
                "modals",
                "charts",
                "authentication",
                "pricing",
                "testimonials",
                "features",
                "heroes",
                "footers",
                "other"
            ],
            "description": "Template category for filtering"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Searchable tags for the template"
        },
        "likes": {
            "type": "integer",
            "minimum": 0,
            "default": 0,
            "description": "Number of likes"
        },
        "downloads": {
            "type": "integer",
            "minimum": 0,
            "default": 0,
            "description": "Number of downloads"
        },
        "views": {
            "type": "integer",
            "minimum": 0,
            "default": 0,
            "description": "Number of views"
        },
        "author": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Author display name"
                },
                "avatar": {
                    "type": "string",
                    "description": "URL to author avatar image"
                }
            },
            "required": ["name"]
        },
        "previewImage": {
            "type": "string",
            "description": "URL or path to preview image"
        },
        "livePreviewUrl": {
            "type": "string",
            "description": "URL to live demo"
        },
        "features": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "List of template features"
        },
        "responsive": {
            "type": "boolean",
            "default": true,
            "description": "Whether template is responsive"
        },
        "darkMode": {
            "type": "boolean",
            "default": true,
            "description": "Whether template supports dark mode"
        },
        "animated": {
            "type": "boolean",
            "default": false,
            "description": "Whether template has animations"
        }
    },
    "additionalProperties": false
}